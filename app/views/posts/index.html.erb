<div class="main posts-index">
  <div class="container">
    <%= form_tag posts_index_url, :method => 'get' do %>
  
    <%= text_field_tag :search, params[:search], class: "search_form", placeholder: "search"%>
    <%= submit_tag "Search", :content => nil, class: "search_form" %>
  
  <% end %>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
    
      <%= paginate @posts %>
    
  </div>
</div>